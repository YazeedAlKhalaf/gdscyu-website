---
import { Icon } from "astro-icon";

import Spacer from "../ui/Spacer.astro";
// Data
import { projectsData } from "../../data/projects";
---

<section id="Projects" aria-label="Projects Showcase Section">
  <!-- Wave Shape And Heading Text -->
  <Spacer title="Explore Our Projects ðŸš€" color="red" />
  <!-- Content -->

  <div onclick="" class="w-full px-6 py-20 lg:px-9">
    <div class="grid auto-rows-fr gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projectsData.map((project) => {
          return (
            <div>
              <div class="group relative flex h-full overflow-hidden rounded-2xl shadow-md hover:shadow-2xl">
                <img
                  src={project.image}
                  alt={project.imageAlt}
                  class="absolute inset-0 h-full w-full object-cover object-center group-hover:blur-lg"
                />

                {/* Hover Content */}
                <div class="relative z-10 flex w-full flex-col items-center justify-center gap-y-6 px-8 py-[4.5rem] text-center opacity-0 transition duration-100 ease-in-out hover:opacity-100">
                  <h1 class="text-lg font-bold tracking-widest text-google-red">
                    {project.name}
                  </h1>
                  <p class="font-medium leading-relaxed text-slate-100">
                    {project.description}
                  </p>

                  {/* Github & Projects icons */}

                  <div class="invisible flex gap-x-5 group-hover:visible">
                    <a
                      href={project.Github}
                      target="_blank"
                      rel="noreferrer"
                      aria-label="Github Link"
                    >
                      <Icon name="ri:github-fill" />
                    </a>
                    <a
                      href={project.Link}
                      target="_blank"
                      rel="noreferrer"
                      aria-label="Project Link"
                    >
                      <Icon name="line-md:external-link" />
                    </a>
                  </div>
                </div>
                {/* Visible Content */}
                <div class="absolute inset-0 bg-black opacity-50" />
                <div class="absolute inset-0 flex items-center justify-center px-8 group-hover:invisible">
                  <div class="text-center text-slate-100">
                    <h1 class="text-xl font-bold">{project.name}</h1>
                  </div>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  svg {
    @apply h-8 w-8 text-slate-100 transition duration-300 ease-in-out hover:scale-105;
  }
</style>
