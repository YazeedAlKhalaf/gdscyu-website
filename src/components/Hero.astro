---
import LogoModel from "./hero/LogoModel.svelte";
import ARview from "./hero/ARview.svelte";
---

<section id="landing" aria-label="Hero Section">
  <div
    class="flex flex-col items-center justify-between gap-y-16 px-8 py-14 md:flex-row lg:px-10 lg:py-20"
  >
    <div
      class="flex flex-col items-center gap-y-9 text-center dark:text-white md:w-1/2 md:items-start md:gap-y-6 md:text-left lg:flex-grow"
    >
      <a
        href="https://yu.edu.sa/campus/student-clubs/"
        target="_blank"
        rel="noreferrer"
        aria-label="Al-Yamamah University Student Clubs"
        class="text-xl font-bold text-orange-400 underline-offset-8 hover:underline lg:text-3xl"
        >Al-Yamamah University</a
      >
      <h1 class="flex text-4xl font-bold lg:text-6xl">
        <span class="text-google-blue">G</span>
        <span class="text-google-red">o</span>
        <span class="text-google-yellow">o</span>
        <span class="text-google-blue">g</span>
        <span class="text-google-green">l</span>
        <span class="text-google-red">e</span>
        &nbsp;Developer
      </h1>
      <h1 class="text-4xl font-bold lg:text-6xl">Student Club</h1>
      <p class="text-xl font-bold lg:text-3xl">Learn, Grow, and Connect!</p>
      <div class="flex justify-center">
        <a
          href="https://gdsc.community.dev/al-yamamah/"
          target="_blank"
          rel="noreferrer"
          aria-label="Learn more about Google developer student clubs"
          class="rounded bg-orange-400 px-12 py-2 text-lg font-bold text-white hover:scale-105"
          >Learn More</a
        >
      </div>
    </div>
    <div
      class="flex w-5/6 flex-col items-center md:w-1/2 lg:min-h-[24.5rem] lg:w-full lg:max-w-xl"
    >
      <LogoModel client:load />
      <ARview client:only="svelte" />
    </div>
  </div>
</section>
