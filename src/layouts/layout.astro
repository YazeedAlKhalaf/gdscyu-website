---
import "./style.css";

interface Props {
  title: string;
  layer: string;
  decription: string;
}

const { title, layer, decription } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={decription} />
    <title>{title}</title>
    <link
      rel="preload"
      href={`/images/layers/${layer}-layer.svg`}
      as="image"
      type="image/svg+xml"
    />
  </head>
  <body class="default">
    <slot />
  </body>
</html>
